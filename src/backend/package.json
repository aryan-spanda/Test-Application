{
  "name": "@test-application/backend",
  "version": "1.0.0",
  "description": "Node.js backend for test application",
  "main": "src/server.js",
  "private": true,
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js", 
    "build": "npm run build:cleanup && npm run build:copy",
    "build:cleanup": "rmdir /s /q dist 2>nul || echo \"No dist directory to clean\"",
    "build:copy": "xcopy src dist\\ /E /H /Y",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix"
  },
  "keywords": ["test-application", "backend", "api", "express", "spanda"],
  "author": "Platform Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "cors": "^2.8.5", 
    "morgan": "^1.10.0",
    "prom-client": "^14.2.0",
    "dotenv": "^16.0.3",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.0",
    "express-rate-limit": "^6.7.0",
    "express-validator": "^6.15.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.2",
    "supertest": "^6.3.3",
    "eslint": "^8.45.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
